
<body class="bg-blue-100">
        <main class="max-w-6xl mx-auto p-8">
          <section class="mb-8 ">
            <h2 class="text-2xl font-semibold mb-4 text-rose-300">Destinations Populaires</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
       
              <% @articles.each do |article| %>
                <div class="destination-card bg-transparent p-4 shadow-md rounded-lg">
                  <% if article.image.attached? %>
                    <%= image_tag article.image, class: "w-full  h-64 object-cover mb-4 rounded-lg" %>
                  <% end %>
                  <h3 class="text-xl font-normal text-white"><%= article.title %></h3>
                  <p class=" text-white text-3xl  text-center mt-6"  ><%= link_to "voir plus", article %>

                </div>               
              <% end %>
            </div>
          </section>
            </main>
</body>