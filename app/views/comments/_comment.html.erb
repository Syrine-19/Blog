<% unless comment.archived? %>
  <div class="mb-4">
    <p>
      <strong class="font-bold">Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p class="mt-2">
      <strong class="font-bold">Commentaire:</strong>
      <%= comment.body %>
    </p>

    <p class="mt-4">
      <%= link_to "Supprimer l'article", [comment.article, comment], class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:bg-red-700", data: {
                  turbo_method: :supprimer,
                  turbo_confirm: "Vous êtes sûrs ?"
                } %>
    </p>
  </div>
<% end %>
