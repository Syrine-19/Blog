<%= form_with model: [@article, @article.comments.build] do |form| %>
  <div class="p-4">
    <%= form.label :commenter, class: "block text-gray-700 font-bold mt-4" %>
    <%= form.text_field :commenter, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="p-4">
    <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :description, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="p-4">
    <%= form.label :status, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.select :status, ['public', 'privé', 'archivé'], selected: 'public', class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="p-4">
    <%= form.submit "ajouter un commentaire" ,class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:bg-blue-700" %>
  </div>
<% end %>
